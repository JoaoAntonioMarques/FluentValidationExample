@model FVExample.ViewModels.ProdutoVM

@{
    ViewData["Title"] = "Registrar Produto";
}

<h2>@ViewData["Title"]</h2>

<form asp-action="Create" method="post">
    <div class="form-horizontal">
        <hr />

        <div class="form-group">
            <label asp-for="Nome" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <input asp-for="Nome" name="Nome" class="form-control" />
                <span asp-validation-for="Nome" class="text-danger">@Html.ValidationMessageFor(model => model.Nome)</span>
            </div>
        </div>

        <div class="form-group">
            <label asp-for="Tipo" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <input asp-for="Tipo" name="Tipo" class="form-control" />
                <span asp-validation-for="Tipo" class="text-danger">
                    @Html.ValidationMessageFor(model => model.Tipo)
                </span>
            </div>
        </div>

        <div class="form-group">
            <label asp-for="Data" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <input asp-for="Data" name="Data" type="date" class="form-control" />
                <span asp-validation-for="Data" class="text-danger">
                    @Html.ValidationMessageFor(model => model.Data)
                </span>
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Cadastrar" class="btn btn-success" />
            </div>
        </div>
    </div>
</form>